<h1>Listing examples</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Filename</th>
      <th>Line number</th>
      <th>Status</th>
      <th>Test run</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @examples.each do |example| %>
      <tr>
        <td><%= example.description %></td>
        <td><%= example.filename %></td>
        <td><%= example.line_number %></td>
        <td><%= example.status %></td>
        <td><%= example.test_run_id %></td>
        <td><%= link_to 'Show', example %></td>
        <td><%= link_to 'Edit', edit_example_path(example) %></td>
        <td><%= link_to 'Destroy', example, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Example', new_example_path %>
